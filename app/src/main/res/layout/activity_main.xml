<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Converter Suhu"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="112dp"
        android:text="Celcius"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/celcius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="-7dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Masukan Celcius"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/convert"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-16dp"
        android:textColor="@color/puteh"
        android:background="@drawable/capsule2"
        android:onClick="konversisuhu"
        android:layout_marginTop="161dp"
        android:text="convert" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="227dp"
        android:layout_marginEnd="-18dp"
        android:layout_toStartOf="@+id/textView"
        android:text="Kelvin"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/kelvin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/celcius"
        android:layout_alignTop="@+id/textView3"
        android:ems="10"
        android:hint="Hasil Dalam Kelvin"
        android:gravity="center"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-12dp"
        android:layout_marginBottom="330dp"
        android:text="Farenheit"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/farenheit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/celcius"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-8dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Hasil Dalam Farenheit"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-25dp"
        android:layout_marginBottom="254dp"
        android:layout_toStartOf="@+id/textView"
        android:text="Reamur"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/reamur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignEnd="@+id/celcius"
        android:layout_marginTop="-15dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Hasul Dalam Reamur"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/exit"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/convert"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="179dp"
        android:background="@drawable/capsule2"
        android:text="Exit"
        android:textColor="@color/puteh" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="keluar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:text="@mozeeb" />

</RelativeLayout>